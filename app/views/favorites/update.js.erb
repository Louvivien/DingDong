<% unless @property_id.nil? %>
var currentFav = 'fav-<%= @property_id %>';
<% end %>
var currentFavNumber = parseInt(<%= @favorite_number %>);
var newFavNumber = currentFavNumber

document.getElementById(currentFav).classList.toggle("text-orange");
document.getElementById(currentFav).classList.toggle("text-light");

if (document.getElementById(currentFav).classList[3] == "text-orange") {
  newFavNumber ++;
  document.getElementById('fav_navbar').innerHTML = '(<%= @favorite_number + 1 %>)';
} else if (document.getElementById(currentFav).classList[3] == "text-light") {
  newFavNumber --;
  document.getElementById('fav_navbar').innerHTML = '(<%= @favorite_number - 1 %>)';
} else {
  
}

console.log('<%= @favorite_number %>');