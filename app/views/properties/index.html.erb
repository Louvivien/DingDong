<%= render 'layouts/navbar' %>

<div class="tab-content m-3" >
  <div class="container" style="margin-top:150px;">
  	<%rowcount = 0%>

<% if @tenant %>
	<h2>Favoris</h2>
	<%= render 'properties/index_properties_tenant', visits: @fav_visits %>
	<h2>Demandes de visites</h2>
	<%= render 'properties/index_properties_tenant', visits: @asked_visits %>
	
<% else %>


  	<div class="row">
			<% @properties.each do |property| %>
				
				
			<%= render 'layouts/property_index_row', property: property %>
			<% rowcount += 1%>
			<% if rowcount%3 == 0 %> </div> <div class="row"><% end%>

			<% end %> 

		</div>

<%end%>

	</div>
</div>
<%= render 'layouts/footer' %>