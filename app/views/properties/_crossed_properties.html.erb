                      </figure>
                    <%end%>
                  </div>
                  <div class="owl-item active pb-2" style="width: 521.665px; margin-right: 10px;">
                    <% fourth_property = properties.last(20)[rand(0..19)]%>
                    <% fourth_property_first_image = fourth_property.images.first %>
                    <%=link_to property_path(fourth_property) do %>
                      <figure class="photo equal pt-2">
                          <img src="<%=asset_path(image_path(main_app.url_for(fourth_property_first_image)))%>" alt="Image">
